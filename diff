  <script>
    const THEORIES = [
      {name:"Vygotsky ‚Äì Zone of Proximal Development",desc:"Design scaffolds that help learners stretch just beyond what they can do alone."},
      {name:"Bransford et al. ‚Äì Four Lenses of Learning Environments",desc:"Balance learner-, knowledge-, assessment-, and community-centered design."},
      {name:"Self-Determination Theory (Deci & Ryan)",desc:"Support autonomy, competence, and relatedness to boost motivation."},
      {name:"Rogoff ‚Äì Guided Participation",desc:"Learning grows through shared activity and gradual involvement in community practices."},
      {name:"Lave & Wenger ‚Äì Communities of Practice",desc:"Participation and identity within a community drive learning over time."},
      {name:"Gee ‚Äì Affinity Spaces",desc:"People learn around shared interests in open, fluid, often digital networks."},
      {name:"Mayer ‚Äì Multimedia Learning",desc:"Use words + visuals well; reduce extraneous load; segment and signal key ideas."},
      {name:"Sawyer ‚Äì Learning Sciences Design Cycle",desc:"Iterate: observe ‚Üí design ‚Üí test ‚Üí refine in authentic contexts."},
      {name:"Schunk ‚Äì Self-Efficacy",desc:"Beliefs about capability shape effort, persistence, and achievement."},
      {name:"Hutchins ‚Äì Distributed Cognition",desc:"Thinking is distributed across people, tools, and the environment."},
      {name:"Other",desc:"Choose a relevant concept not listed (e.g., ICAP, Cognitive Load) and justify the link."}
    ];

    const btn = document.getElementById('btn');
    const out = document.getElementById('out');

    btn.addEventListener('click', () => {
      const pool = [...THEORIES];
      const pick = () => pool.splice(Math.floor(Math.random()*pool.length),1)[0];
      const a = pick(), b = pick();
      out.innerHTML = `
        <p><strong>1Ô∏è‚É£ ${a.name}</strong><br>${a.desc}</p>
        <p><strong>2Ô∏è‚É£ ${b.name}</strong><br>${b.desc}</p>
      `;
    });
  </script>
